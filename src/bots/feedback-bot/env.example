# BlueBubbles Server Configuration
BLUEBUBBLES_SERVER_URL=http://localhost:1234
BLUEBUBBLES_PASSWORD=your-bluebubbles-password

# Chat Configuration (get these from BlueBubbles)
# Provide comma-separated list of chat GUIDs to monitor
CHAT_GUIDS=chat-guid-1,chat-guid-2,chat-guid-3

# Legacy single chat support (deprecated - use CHAT_GUIDS instead)
# CHAT_GUID=single-chat-guid

# FastAPI Configuration
HOST=0.0.0.0
PORT=8081

# Debug Configuration
DEBUG=false

# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key

# Linear API Configuration
# Get your Linear API key from: https://linear.app/settings/api
LINEAR_API_KEY=your-linear-api-key
LINEAR_TEAM_KEY=TEAM  # Optional: specific team key (e.g., "PRODUCT", "ENG"). If not set, uses first team
ENABLE_LINEAR_INTEGRATION=true

# Linear Auto-Triaging Settings
AUTO_TRIAGE_ON_SESSION_END=true   # Automatically create Linear issues when feedback sessions end
NOTIFY_USER_ON_TRIAGE=false       # Send notification to user when their feedback is triaged (optional)

# Bot Configuration
FOUNDER_NAME=YourName
PRODUCT_NAME=YourProduct

# Feedback Collection Settings
MAX_QUESTIONS_PER_SESSION=3
AUTO_SUMMARIZE_THRESHOLD=3

# Cross-Chat Insights Settings
ENABLE_CROSS_CHAT_INSIGHTS=true
CROSS_CHAT_PROBE_FREQUENCY=0.3 